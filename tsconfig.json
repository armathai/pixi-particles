{
    "compilerOptions": {
        "target": "es5",
        "module": "none",
        "outFile": "bin/pixi-particles.js",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "inlineSources": true,
        "declaration": true,
        "skipLibCheck": true
    },
    "include": ["src/com/armathai/pixiparticles/**/*.ts", "src/com/armathai/pixiparticles/*.ts"],
    "exclude": ["node_modules/**/*", "bin/*", "src/__examples__/ts/**/*.ts"]
}
